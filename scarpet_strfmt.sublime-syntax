      set: [apply-y, apply-b, apply-u, apply-s]
    - match: '{{fontfmt}}*(?:i{{fontfmt}}*()|u{{fontfmt}}*()|s{{fontfmt}}*()){3}\1\2\3\s'
      set: [apply-y, apply-i, apply-u, apply-s]

    - match: '{{fontfmt}}*(?:b{{fontfmt}}*()|i{{fontfmt}}*()){2}\1\2\s'
