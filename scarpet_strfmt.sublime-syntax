    - match: '{{fontfmt}}*(?:i{{fontfmt}}*()|u{{fontfmt}}*()){2}\1\2\s'
      set: [apply-y, apply-i, apply-u]
    - match: '{{fontfmt}}*(?:i{{fontfmt}}*()|s{{fontfmt}}*()){2}\1\2\s'
