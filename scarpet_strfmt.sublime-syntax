    - match: '{{fontfmt}}*(?:u{{fontfmt}}*()|s{{fontfmt}}*()){2}\1\2\s'
      set: [apply-y, apply-u, apply-s]

    - match: '{{fontfmt}}*b{{fontfmt}}*\s'
      set: [apply-y, apply-b]
    - match: '{{fontfmt}}*i{{fontfmt}}*\s'
      set: [apply-y, apply-i]
    - match: '{{fontfmt}}*u{{fontfmt}}*\s'
      set: [apply-y, apply-u]
    - match: '{{fontfmt}}*s{{fontfmt}}*\s'
      set: [apply-y, apply-s]

    - match: '{{fontfmt}}*\s'
      set: [apply-y]

  m:
